# Django Environment Configuration
# Options: development, staging, production
DJANGO_ENV=development

# Security - REQUIRED in production
SECRET_KEY=your-secret-key-here-change-this-in-production

# Debug mode - NEVER enable in production
DEBUG=False

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=openmoxie
DB_PASSWORD=your-database-password
DB_NAME=openmoxie
DB_CONN_MAX_AGE=600
DB_SSLMODE=require  # Options: disable, allow, prefer, require, verify-ca, verify-full

# Redis Cache Configuration
CACHE_BACKEND=django.core.cache.backends.redis.RedisCache
CACHE_LOCATION=redis://127.0.0.1:6379/1
CACHE_TIMEOUT=300

# MQTT Configuration
MQTT_HOST=mqtt
MQTT_PORT=8883
MQTT_PROJECT=openmoxie
MQTT_CERT_REQUIRED=False
MQTT_CA_CERTS=/etc/ssl/certs/ca-certificates.crt
MQTT_CERTFILE=
MQTT_KEYFILE=

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_ENABLED=True
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
SENTRY_SEND_PII=False
SENTRY_LOG_LEVEL=INFO
SENTRY_EVENT_LEVEL=ERROR

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@openmoxie.com
SERVER_EMAIL=server@openmoxie.com
# Format: Name:email,Name2:email2
ADMINS=Admin:admin@example.com

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging Configuration
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO
HIVE_LOG_LEVEL=DEBUG
LOG_FILE=/var/log/openmoxie/django.log

# File Upload Limits
FILE_UPLOAD_MAX_MEMORY_SIZE=5242880  # 5MB in bytes
DATA_UPLOAD_MAX_MEMORY_SIZE=5242880  # 5MB in bytes
DATA_UPLOAD_MAX_NUMBER_FIELDS=1000

# Static and Media Files
STATIC_ROOT=/var/www/openmoxie/static
STATIC_URL=/static/
MEDIA_ROOT=/var/www/openmoxie/media
MEDIA_URL=/media/

# Localization
LANGUAGE_CODE=en-us
TIME_ZONE=America/Los_Angeles

# Rate Limiting
RATELIMIT_ENABLE=True

# Development/Staging specific
ENABLE_DEBUG_TOOLBAR=False
ENABLE_TEMPLATE_CACHE=True
INTERNAL_IPS=127.0.0.1,localhost

# AI Configuration
# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORGANIZATION=your-org-id

# Claude/Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# AWS Configuration (if using S3 for static/media)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=
AWS_DEFAULT_ACL=public-read

# Additional Service URLs
API_BASE_URL=https://api.openmoxie.com
FRONTEND_URL=https://www.openmoxie.com
